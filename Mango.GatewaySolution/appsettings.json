{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ApiSettings": {
    "Key": "this is my custom Secret key for authENtication",
    "Issuer": "Mango",
    "Audience": "Mango"
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/product/",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7000
        }
      ],
      "UpstreamPathTemplate": "/api/product/",
      "UpstreamHttpMethod": [ "Get" ],
      "ServiceName": "ProductApi"
    },
    {
      "DownstreamPathTemplate": "/api/product/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7000
        }
      ],
      "UpstreamPathTemplate": "/api/product/{id}",
      "UpstreamHttpMethod": [ "Get" ],
      "ServiceName": "ProductApi"
    },
    {
      "DownstreamPathTemplate": "/api/product/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7000
        }
      ],
      "UpstreamPathTemplate": "/api/product/{id}",
      "UpstreamHttpMethod": [ "POST", "PUT" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
       },
      "ServiceName": "ProductApi"
    },
    {
      "DownstreamPathTemplate": "/api/v1/shoppingcart",
      "UpstreamPathTemplate": "/api/v1/shoppingcart",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "ServiceName": "ShoppingCartApi"
    },
    {
      "DownstreamPathTemplate": "/api/v1/orders",
      "UpstreamPathTemplate": "/api/v1/orders",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete" ],
      "ServiceName": "OrderAPI""
    }
  ],
  "GlobalConfiguration": {
    "ServiceName": "MangoGateway",
    "ServiceAddress": "https://localhost:5001/"
  },
}
